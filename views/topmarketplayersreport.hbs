<style>
    table, th, td {
        border: 1px solid #dddddd;
        border-collapse: collapse;
    }

    table {
        width: 100%;
    }

    th {
        text-align: left;
        padding: 8px;
    }

    td {
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    caption {
        font-size: 24px;
    }
</style>
<table class="report-table">
    <caption><b>Top rated players</b></caption>
    <tr>
        <th>Player ID</th>
        <th>Name</th>
        <th>Club name</th>
        <th>Market price</th>
    </tr>
    {{#each playersResponse}}
        <tr>
            <td>{{Player_ID}}</td>
            <td>{{Name}}</td>
            <td>{{Club_Name}}</td>
            <td>{{Market_Price}}</td>
        </tr>
    {{/each}}
</table>