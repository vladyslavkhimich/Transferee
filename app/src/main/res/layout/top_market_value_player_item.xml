<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/player_block_shape"
    android:id="@+id/topMarketValuePlayerContainer"
    android:layout_marginBottom="10dp">
    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:id="@+id/topMarketValuePlayerImageView"
        app:layout_constraintStart_toStartOf="@id/topMarketValuePlayerContainer"
        app:layout_constraintTop_toTopOf="@id/topMarketValuePlayerContainer"
        android:src="@drawable/bruno"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/topMarketValuePlayerImageView"
        app:layout_constraintTop_toTopOf="@id/topMarketValuePlayerContainer"
        android:id="@+id/topMarketValuePlayerNameTextView"
        android:text="@string/bruno"
        style="@style/PlayerTitleStyle"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="200dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/topMarketValuePlayerClubImageView"
        app:layout_constraintStart_toEndOf="@id/topMarketValuePlayerImageView"
        app:layout_constraintBottom_toBottomOf="@id/topMarketValuePlayerContainer"
        android:layout_marginStart="5dp"
        android:src="@drawable/manchesterunitedsmall"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topMarketValuePlayerClubTextView"
        app:layout_constraintStart_toEndOf="@id/topMarketValuePlayerClubImageView"
        app:layout_constraintTop_toBottomOf="@id/topMarketValuePlayerNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/topMarketValuePlayerContainer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/manchester_united"
        style="@style/ClubStyle"
        android:ellipsize="end"
        android:maxLines="1"
        android:width="120dp"
        android:maxWidth="120dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valuePlaceholder"
        app:layout_constraintBottom_toBottomOf="@id/topMarketValuePlayerContainer"
        app:layout_constraintTop_toTopOf="@id/topMarketValuePlayerContainer"
        app:layout_constraintStart_toEndOf="@id/topMarketValuePlayerClubTextView"
        android:layout_marginStart="10dp"
        style="@style/WhiteSemiBoldTextStyle"
        android:text="@string/value"
        />
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:id="@+id/topMarketValuePlayerValueContainer"
        app:layout_constraintStart_toEndOf="@id/valuePlaceholder"
        app:layout_constraintBottom_toBottomOf="@id/topMarketValuePlayerContainer"
        app:layout_constraintTop_toTopOf="@id/topMarketValuePlayerContainer"
        android:layout_marginStart="10dp"
        android:background="@drawable/red_block_rounded"
        android:orientation="horizontal"
        android:paddingHorizontal="6dp"
        android:paddingVertical="3dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/feeTextView"
            style="@style/WhiteSemiBoldTextStyle"
            android:text="@string/market_value_number"
            android:textAlignment="center"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>