<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="20dp"
    tools:context=".ui.home.HomeFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/topRatedPlayerTextView"
            style="@style/TitlesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/top_rated_players"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>
        <com.example.transferee.helpers.RecyclerViewEmptySupport
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topRatedPlayersRecyclerView"
            app:layout_constraintTop_toBottomOf="@id/topRatedPlayerTextView"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topRatedPlayersEmpty"
            app:layout_constraintTop_toBottomOf="@id/topRatedPlayersRecyclerView"
            android:text="@string/unable_to_load_data"
            android:gravity="center_horizontal"
            style="@style/GrayRegularTextStyle"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topMarketValuePlayersTextView"
            app:layout_constraintTop_toBottomOf="@id/topRatedPlayersEmpty"
            android:layout_marginTop="15dp"
            android:text="@string/top_market_value_players"
            style="@style/TitlesStyle"
            />
        <com.example.transferee.helpers.RecyclerViewEmptySupport
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topMarketValuePlayersRecyclerView"
            app:layout_constraintTop_toBottomOf="@id/topMarketValuePlayersTextView"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topMarketValuePlayersEmpty"
            app:layout_constraintTop_toBottomOf="@id/topMarketValuePlayersRecyclerView"
            android:text="@string/unable_to_load_data"
            android:gravity="center_horizontal"
            style="@style/GrayRegularTextStyle"
            android:textSize="20sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>