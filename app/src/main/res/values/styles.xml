<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
    </style>
    <style name="DarkBlockBackground">
        <item name="android:background">@color/block_black</item>
    </style>
    <style name="MainToolbarStyle">
        <item name="android:background">@color/block_black</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/audiowide_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitlesStyle">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="PlayerTitleStyle">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ClubStyle">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="WhiteSemiBoldTextStyle">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="GrayRegularTextStyle">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="WhiteRegularSearchTextStyle">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TabHeaderText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GraySemiBoldTextStyle">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>